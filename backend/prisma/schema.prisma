generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  USER
  ADMIN
}

enum DeviceStatus {
  ONLINE
  OFFLINE
  MAINTENANCE
}

enum EventType {
  MOTION
  DETECTION
  MANUAL
}

enum EventStatus {
  PENDING
  PROCESSING
  COMPLETED
  FAILED
}

enum ThreatLevel {
  LOW
  MEDIUM
  HIGH
  CRITICAL
}

enum AlertSeverity {
  INFO
  WARNING
  CRITICAL
}

model User {
  id                     String   @id @default(uuid())
  email                  String   @unique
  name                   String?
  passwordHash           String
  role                   Role     @default(USER)
  notificationPreferences Json?
  displayPreferences     Json?
  createdAt              DateTime @default(now())
  updatedAt              DateTime @updatedAt
  sessions               Session[]
  devices                Device[]
  alerts                 Alert[]
}

model Device {
  id        String       @id @default(uuid())
  name      String
  deviceId  String       @unique
  location  String?
  status    DeviceStatus @default(OFFLINE)
  lastSeen  DateTime?
  metadata  Json?
  userId    String
  user      User         @relation(fields: [userId], references: [id])
  createdAt DateTime     @default(now())
  updatedAt DateTime     @updatedAt
  events    Event[]
}

model Event {
  id          String      @id @default(uuid())
  deviceId    String
  device      Device      @relation(fields: [deviceId], references: [id])
  type        EventType
  timestamp   DateTime    @default(now())
  imageUrl    String?
  thumbnailUrl String?
  status      EventStatus @default(PENDING)
  metadata    Json?
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  detections  Detection[]
  alerts      Alert[]
}

model Detection {
  id                String      @id @default(uuid())
  eventId           String
  event             Event       @relation(fields: [eventId], references: [id])
  className         String
  confidence        Float
  bbox              Json
  threatLevel       ThreatLevel
  annotatedImageUrl String?
  processingTimeMs  Int?
  createdAt         DateTime    @default(now())
}

model Alert {
  id                String        @id @default(uuid())
  eventId           String
  event             Event         @relation(fields: [eventId], references: [id])
  userId            String
  user              User          @relation(fields: [userId], references: [id])
  severity          AlertSeverity
  title             String
  message           String
  acknowledged      Boolean       @default(false)
  acknowledgedAt    DateTime?
  notificationsSent Json?
  createdAt         DateTime      @default(now())
  updatedAt         DateTime      @updatedAt
}

model Session {
  id        String   @id @default(uuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  token     String   @unique
  expiresAt DateTime
  createdAt DateTime @default(now())
}
